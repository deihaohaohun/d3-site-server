generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum VideoType {
  Bangumi
  Documentary
  Movie
}

enum VideoStatus {
  Doing
  Todo
  Done
}

model Video {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  title      String      @unique
  cover      String
  createdAt  DateTime    @default(now())
  finishedAt DateTime?
  type       VideoType
  total      Int
  current    Int         @default(0)
  status     VideoStatus @default(Todo)
  historys   History[]
}

model History {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  when    DateTime @default(now())
  video   Video    @relation(fields: [videoId], references: [id])
  videoId String   @db.ObjectId
}

model Account {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title    String @unique
  account  String
  password String
}
